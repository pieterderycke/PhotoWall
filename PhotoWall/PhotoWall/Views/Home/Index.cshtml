@{
    ViewBag.Title = "Photo Wall (HTML 5 Webcam Demo)";
}

<script src="@Url.Content("Scripts/instantPhoto.js")" type="text/javascript"></script>

<!-- Facebook like support -->
<div id="fb-root"></div>
