<p>
    <a href="#" id="joinVideoWall" class="cameraIconSmall">Take Snapshot!</a>
</p>

<div id="videoWall">
    <!-- ko foreach:  { data: users, afterRender: handleAfterUserAdded } -->
    <div class="videoWallItem">
        <img data-bind="attr: { src: image }"/>
        <span data-bind="text: name"></span>
    </div>
    <!-- /ko -->
</div>

<div id="videoWallOptions" title="WebCam">
    User Name: <input type="text" id="userNameField"/> <button id="takePhoto">Take Snapshot</button>
    <br/>
    <video id="webcam" width="320" height="240" autoplay></video>
    <canvas id="photoCanvas" style="display:none;"></canvas>
</div>